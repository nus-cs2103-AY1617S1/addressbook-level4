            <ColumnConstraints hgrow="ALWAYS" />
            <ColumnConstraints hgrow="NEVER" maxWidth="90.0" />
            <ColumnConstraints hgrow="NEVER" maxWidth="80.0" minWidth="80.0" />
         </columnConstraints>
         <children>
            <Label fx:id="taskType" style="-fx-background-color: #ffd13d; -fx-font-weight: bold; -fx-font-size: 15;" text="\$taskType" textAlignment="RIGHT" textOverrun="CLIP" GridPane.columnIndex="2" GridPane.halignment="CENTER" GridPane.valignment="CENTER">
               <font>
                  <Font name="System Bold" size="16.0" />
               </font>
               <GridPane.margin>
                  <Insets />
               </GridPane.margin>
               <padding>
                  <Insets bottom="2.0" left="2.0" right="2.0" top="2.0" />
               </padding>
            </Label>
            <Label fx:id="taskStatus" style="-fx-font-size: 12;" textAlignment="JUSTIFY" textOverrun="CLIP" underline="true" GridPane.columnIndex="1" GridPane.halignment="RIGHT" GridPane.valignment="CENTER">
               <font>
                  <Font size="14.0" />
               </font>
               <GridPane.margin>
                  <Insets />
               </GridPane.margin>
            </Label>
            <HBox alignment="CENTER_LEFT" prefHeight="34.0" prefWidth="510.0" translateX="10.0">
               <children>
                  <Label fx:id="id" minWidth="10.0" styleClass="cell_big_label" />
                  <Label fx:id="taskName" styleClass="cell_big_label" text="\$taskName" HBox.hgrow="ALWAYS">
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                  </Label>
               </children>
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
               <stylesheets>
                  <URL value="@DarkTheme.css" />
                  <URL value="@Extensions.css" />
               </stylesheets>
            </HBox>
            <Label fx:id="taskStatus" alignment="CENTER" style="-fx-font-size: 14;" GridPane.columnIndex="1">
               <padding>
                  <Insets bottom="2.0" left="2.0" right="2.0" top="2.0" />
               </padding>
               <GridPane.margin>
                  <Insets right="6.0" />
               </GridPane.margin>
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
         </children>
         <rowConstraints>
            <RowConstraints />
         </rowConstraints>
      </GridPane>
      <GridPane prefHeight="38.0" prefWidth="600.0">
         <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
         </rowConstraints>
         <children>
            <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0" translateY="-8.0" GridPane.rowIndex="1">
               <children>
                  <Label style="-fx-text-fill: #3c3838; -fx-font-size: 13;" text="Tags: ">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Label>
                  <Label fx:id="tags" prefWidth="500.0" style="-fx-font-size: 13; -fx-text-fill: #3c3838;" text="\$tags" />
               </children>
               <GridPane.margin>
                  <Insets left="20.0" />
               </GridPane.margin>
            </HBox>
            <HBox alignment="CENTER_LEFT" translateY="-9.0">
               <children>
                  <Label fx:id="dueDateAndTime" style="-fx-text-fill: #3c3838; -fx-font-size: 13;" text="\$dueDateAndTime" textFill="#615b5b" />
               </children>
               <GridPane.margin>
                  <Insets left="20.0" />
               </GridPane.margin>
            </HBox>
         </children>
      </GridPane>
