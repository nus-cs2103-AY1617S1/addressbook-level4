<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<HBox id="cardPane" fx:id="cardPane" xmlns="http://javafx.com/javafx/8.0.65" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <GridPane HBox.hgrow="ALWAYS">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="150.0" />
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="100.0" minWidth="10.0" prefWidth="100.0" />
            </columnConstraints>
            <children>
                <VBox alignment="CENTER_LEFT" maxHeight="150.0" minHeight="105.0" prefHeight="115.0" GridPane.columnIndex="0">
                    <stylesheets>
                        <URL value="@TarsTheme.css" />
                        <URL value="@Extensions.css" />
                    </stylesheets>
                    <padding>
                        <Insets bottom="5" left="15" right="5" top="5" />
                    </padding>

                    <children>
                        <HBox alignment="CENTER_LEFT" spacing="5">
                            <children>
                                <HBox>
                                    <Label fx:id="id" styleClass="cell_index_label" />
                                    <Label fx:id="name" styleClass="cell_big_label" text="\$first">
                              <HBox.margin>
                                 <Insets bottom="5.0" />
                              </HBox.margin></Label>
                                </HBox>
                                <Label fx:id="tags" styleClass="cell_small_label" text="\$tags">
                           <HBox.margin>
                              <Insets bottom="5.0" />
                           </HBox.margin></Label>
                            </children>
                        </HBox>
                  <Label fx:id="startDate" layoutX="25.0" layoutY="52.0" styleClass="cell_small_label" text="\$startDate">
                     <graphic>
                        <Label styleClass="cell_medium_label" text="Start:">
                           <padding>
                              <Insets left="5.0" right="5.0" />
                           </padding></Label>
                     </graphic>
                     <VBox.margin>
                        <Insets />
                     </VBox.margin>
                  </Label>
                        <Label fx:id="endDate" styleClass="cell_small_label" text="\$endDate">
                     <graphic>
                        <Label styleClass="cell_medium_label" text="End:">
                           <padding>
                              <Insets left="5.0" right="5.0" />
                           </padding></Label>
                     </graphic></Label>
                        <Label fx:id="priority" styleClass="cell_small_label" text="\$priority">
                     <graphic>
                        <Label styleClass="cell_medium_label" text="Priority:">
                           <padding>
                              <Insets left="5.0" right="5.0" />
                           </padding></Label>
                     </graphic></Label>
                        <Label fx:id="status" styleClass="cell_small_label" text="\$status">
                     <graphic>
                        <Label styleClass="cell_medium_label" text="Status:">
                           <padding>
                              <Insets left="5.0" right="5.0" />
                           </padding></Label>
                     </graphic></Label>
                    </children>
                </VBox>
            </children>
         <rowConstraints>
            <RowConstraints />
         </rowConstraints>
        </GridPane>
    </children>
</HBox>
